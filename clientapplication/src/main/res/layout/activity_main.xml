<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/title_layout"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:textStyle="bold"
            android:text="Client"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/number_info_layout"
        android:layout_below="@id/title_layout"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_bind_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bind Service" />
        <TextView
            android:id="@+id/txt_number"
            android:text="number"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_get_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get number" />
        <EditText
            android:id="@+id/edt_input_number"
            android:inputType="number"
            android:background="#CCCACA"
            android:layout_width="300dp"
            android:layout_height="40dp"/>
        <Button
            android:id="@+id/btn_set_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set number" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/account_info_layout"
        android:layout_below="@id/number_info_layout"
        android:background="#EDCCCC"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_get_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get account" />
        <Button
            android:id="@+id/btn_set_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set account at Client" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_account_info_layout"
        android:layout_below="@id/account_info_layout"
        android:background="#EDB7B7"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_get_list_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get list account" />
        <Button
            android:id="@+id/btn_set_list_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set list account at Client" />
    </LinearLayout>
</RelativeLayout>